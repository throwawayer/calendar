*
  box-sizing border-box
  outline none

main
#main
  display block

html
  -webkit-font-smoothing antialiased

body
  margin 0
  background $body-background
  background-size 800% 800%
  font-family $font
  font-size $font-size
  line-height $line-height
  color $black-2
  overflow-x hidden
  -webkit-animation AnimationName 45s ease infinite
  -moz-animation AnimationName 45s ease infinite
  -o-animation AnimationName 45s ease infinite
  animation backgroundAnimation 45s ease infinite

a
  cursor pointer
  color $blue-dark
  text-decoration none !important

h1
  margin 0
  font-size 40px
  line-height 40px

h2
  margin 0
  font-size 32px
  line-height 32px

h3
  margin 0
  font-size 28px
  line-height 28px

h4
  margin 0
  font-size 20px
  line-height 20px

h5
  margin 0
  font-size 16px
  line-height 16px

hr
  display block
  margin 32px 0
  margin-block 32px
  margin-inline auto
  overflow hidden
  border-style solid
  border-width 1px
  border-color #bfbfbf

ul
  list-style none
  margin-block 0
  margin-inline 0
  padding-inline 0
  overflow hidden


@-webkit-keyframes backgroundAnimation {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%
  }
}

@-moz-keyframes backgroundAnimation {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

@-o-keyframes backgroundAnimation {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

@keyframes backgroundAnimation {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}
