{
  "compilerOptions": {
    "module": "commonJS",
    "moduleResolution": "node",
    "target": "esnext",
    "experimentalDecorators": true,
    "outDir": "./wwwwroot",
    "baseUrl": ".",
    "jsx": "react",
    "strict": true,
    "removeComments": true,
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "./wwwroot"]
}
